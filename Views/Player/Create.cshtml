@model Player

<h2>Új Player hozzáadása</h2>

<form asp-controller="Player" asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Név</label>
        <input type="text" class="form-control" id="Name" name="Name">
    </div>

    <div class="form-group">
        <label for="PlayerName">Játékosnév</label>
        <input type="text" class="form-control" id="PlayerName" name="PlayerName" required>
    </div>

    <div class="form-group">
        <label for="JoinDate">Csatlakozás dátuma</label>
        <input type="date" class="form-control" id="JoinDate" name="JoinDate" required>
    </div>

    <button type="submit" class="btn btn-success">Hozzáadás</button>
    <a asp-action="CancelCreate" class="btn btn-secondary">Mégse</a>

</form>
